{
  "version": "2.0.0",
  "tasks": [{
      "label": "Build Android APK",
      "type": "shell",
      "command": "flutter build apk --release --no-tree-shake-icons",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build iOS for TestFlight",
      "type": "shell",
      "command": "flutter clean && flutter pub get && flutter build ipa --release --no-tree-shake-icons",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
